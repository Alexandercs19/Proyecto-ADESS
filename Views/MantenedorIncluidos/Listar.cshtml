        <div class="card">

            <div class="card-body">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Cedula</th>
                            <th>Apellidos </th>
                            <th>Nombre</th>
                            <th>Sub</th>
                            <th>Monto</th>
                            <th>Fecha</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cedula_add</td>
                                <td>@item.Apellido</td>
                                <td>@item.Nombre</td>
                                <td>@item.Sub</td>
