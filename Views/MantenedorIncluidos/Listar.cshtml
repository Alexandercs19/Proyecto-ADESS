@model IEnumerable<ClassAdd>
@{
    ViewData["Title"] = "Incluidos";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="Espacio-Container">
        <div class="BotonCargar-Container">
            <div class="col-auto">
                <input type="file" class="btn btn-outline-info mb-3">Cargar Archivo .txt</">
            </div>
        </div>
        <form asp-controller="MantenedorIncluidos" method="post" class="row g-3" style="display: flex; justify-content: center; align-items: center; position: relative; bottom:11px;">
            <div class="col-auto">
                <label for="LabelBuscar2" class="visually-hidden">Buscar por: </label>
                <label readonly class="form-control-plaintext" id="LabelBuscar1" value="Buscar por: ">Buscar por:</label>
            </div>
            <div class="col-auto">
                <label class="visually-hidden">Cedula</label>
                <input type="number" class="form-control" id="cedula_id" name="cedula" placeholder="Cedula">
            </div>
            <div class="col-auto">
                <label class="visually-hidden">Nombre</label>
                <input name="nombre" type="text" class="form-control" id="nombre_id" placeholder="Nombre">
            </div>
            <div class="col-auto">
                <label class="visually-hidden">Apellido</label>
                <input name="apellido" type="text" class="form-control" id="apellido_id" placeholder="Apellido">
            </div>
            <div class="col-auto" style="position: relative; top: 8px;">
                <button type="submit" class="btn btn-primary mb-3" asp-action="Obtener"> Buscar</button>
            </div>
            <div class="col-auto" style="position: relative; top: 8px;">
                <button type="submit" class="btn btn-warning mb-3" asp-action="Guardar">Insertar nuevo registro</button>
            </div>
            <div class="col-auto" style="position: relative; top: 8px;">
                <button type="submit" class="btn btn-success mb-3">Generar arhivo .txt</button>
            </div>
        </form>
