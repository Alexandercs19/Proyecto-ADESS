@model ClassAdd
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="text-align:center; font-size: 25px;">
    <div class="card-header">
        Formulario para Incluidos
    </div>
</div>
<form asp-action="Editar" asp-controller="MantenedorIncluidos" method="post">
    <input asp-for="Id_add" type="hidden" class="form-control">
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca la Cedula</label>
        <input asp-for="Cedula_add" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca el Apellido</label>
        <input asp-for="Apellido" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca el Nombre</label>
        <input asp-for="Nombre" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca el SUB</label>
        <input asp-for="Sub" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca el Monto</label>
        <input asp-for="Monto" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label class="exampleInputEmail1">Introduzca la Fecha</label>
        <input asp-for="Fecha_add" type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary" style="text-decoration:none; position: relative; top:5px;">Guardar</button>
    <button class="btn btn-warning" asp-action="Listar" style="text-decoration:none; position: relative; top:5px;">Volver a la lista</button>
</form>

