
@{
    ViewData["Title"] = "Buscar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Cedula</th>
                    <th>Motivo </th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cedula</td>
                        <td>@item.Motivo</td>
                        <td>@item.Fecha</td>
                        <td>
                            <a asp-action="Editar" asp-controller="MantenedorExcluidos" class="btn btn-success btn-sm" asp-route-idExcluidos="@item.IdExcluidos">Editar</a>
                            <a asp-action="Eliminar" asp-controller="MantenedorExcluidos" class="btn btn-danger btn-sm" asp-route-id_add="@item.IdExcluidos">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/MantenedorExcluidos/Listar" style="text-decoration:none; display:flex; justify-content:center; position: relative; bottom:5px;"><button class="btn btn-warning">Volver al Listado</button></a>
</div>
